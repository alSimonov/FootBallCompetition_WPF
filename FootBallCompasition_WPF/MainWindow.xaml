                                <hc:SideMenuItem.Icon>
                                    <Image Source="Images\stadium.png" Width="42" Height="42"/>
                                </hc:SideMenuItem.Icon>
                            </hc:SideMenuItem>
                            <hc:SideMenuItem Header="Участники" Background="Transparent" Foreground="#d0c0ff" FontSize="18"  Margin="15 0 0 0">
                                <hc:SideMenuItem.Icon>
                                    <Image Source="Images\shoot.png" Width="42" Height="42" />
                                </hc:SideMenuItem.Icon>

                                <hc:SideMenuItem x:Name="smPlayers" Header="Игроки"  >
                                    <hc:SideMenuItem.Icon>
                                        <TextBlock Text="&#xf2cb;" />
                                    </hc:SideMenuItem.Icon>
